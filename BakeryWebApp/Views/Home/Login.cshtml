@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <p>Please log in below.</p>
    <form asp-action="Login" method="post" class="border-1">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="EmployeeName">Name</label>
            <input asp-for="EmployeeName" type="text" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EmployeePassword">Password</label>
            <input asp-for="EmployeePassword" type="password" class="form-control" />
        </div>
    </form>
</div>
