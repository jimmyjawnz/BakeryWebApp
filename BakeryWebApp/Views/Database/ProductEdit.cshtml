@using BakeryWebApp.Models.Database
@model Product
@{
    ViewData["Title"] = "Edit " + Model.ProductName;
}

<div id="content">
    <div>
        <h2 class="mb-3">@ViewBag.Title</h2>
        <form asp-action="ProductEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-check form-switch mb-3">
                <label asp-for="IsAvailable" class="form-check-label">Available?</label>
                <input type="checkbox" asp-for="IsAvailable" checked class="form-check-input" />
                <div class="form-text">Toggles visability in Product lists on Till and Order views.</div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductId" class="form-label">ID</label>
                <input asp-for="ProductId" type="hidden" class="form-control" />
                <div class="form-text">This value is can not be changed.</div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductName" class="form-label">Name</label>
                <input asp-for="ProductName" type="text" class="form-control" />
                <span asp-validation-for="ProductName" class="form-text text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductPrice" class="form-label">Price</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupPrepend">$</span>
                    </div>
                    <input asp-for="ProductPrice" type="text" class="form-control" aria-describedby="inputGroupPrepend" />
                </div>
                <span asp-validation-for="ProductPrice" class="form-text text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProductDescription" class="form-label">Description</label>
                <input asp-for="ProductDescription" type="text" class="form-control" />
                <span asp-validation-for="ProductDescription" class="form-text text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GroupId" class="form-label">Group</label>
                <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId">
                    <option value="0" disabled>-- Select Group --</option>
                </select>
                <span asp-validation-for="GroupId" class="form-text text-danger"></span>
            </div>

            <input asp-for="ProductGroup" value="" type="hidden" />

            <button type="submit" class="btn btn-primary">Update Product</button>
            <a href='javascript:history.go(-1)' class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>